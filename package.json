{
  "name": "moekoemusic",
  "version": "1.2.0",
  "main": "electron/main.js",
  "scripts": {
    "install-all": "npm install && cd api && npm install",
    "serve": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:serve": "cross-env NODE_ENV=development electron .",
    "api": "node api/app.js",
    "dev": "npm run api & npm run serve & npm run electron:serve",
    "build:api:win": "npm run --prefix ./api pkgwin",
    "build:api:linux": "npm run --prefix ./api pkglinux",
    "build:api:macos": "npm run --prefix ./api pkgmacos",
    "electron:build:win": "run-s build:api:win \"electron:build -- --win\"",
    "electron:build:linux": "run-s build:api:linux \"electron:build -- --linux\"",
    "electron:build:macos": "run-s build:api:macos \"electron:build -- --mac --arm64\"",
    "electron:build": "cross-env NODE_ENV=production electron-builder"
  },
  "engines": {
    "node": ">=18"
  },
  "build": {
    "publish": null,
    "compression": "maximum",
    "extraResources": [
      {
        "from": "build/icons/",
        "to": "icons/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "extraFiles": [
      {
        "from": "api/bin",
        "to": "api/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "public/assets",
        "to": "assets"
      }
    ],
    "appId": "com.MoeKoe.Music",
    "productName": "MoeKoe Music",
    "copyright": "Â© 2024 MoeKoe",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "icon": "build/icons/icon",
    "win": {
      "icon": "build/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "installerIcon": "build/icons/icon.ico",
      "uninstallerIcon": "build/icons/icon.ico",
      "installerHeaderIcon": "build/icons/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MoeKoe Music",
      "include": "build/installer.nsh",
      "license": "build/license.txt",
      "language": "2052",
      "warningsAsErrors": true
    },
    "mac": {
      "icon": "build/icons/icon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "identity": null
    },
    "dmg": {
      "sign": false
    },
    "linux": {
      "icon": "build/icons/linux_256x256.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  },
  "type": "module",
  "author": {
    "name": "MoeJue",
    "email": "MoeJue@qq.com"
  },
  "blog": "MoeJue.cn",
  "license": "MIT",
  "description": "An open-source KuGou third-party music client",
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.1.4",
    "@vue/compiler-sfc": "^3.5.12",
    "cross-env": "^7.0.3",
    "electron": "^33.0.2",
    "electron-builder": "^25.1.8",
    "npm-run-all": "^4.1.5",
    "vite": "^5.4.10",
    "vue-loader": "^17.3.1",
    "wait-on": "^8.0.1"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "electron-is-dev": "^3.0.1",
    "electron-log": "^5.2.0",
    "electron-store": "^10.0.0",
    "element-plus": "^2.8.7",
    "pinia": "^2.2.4",
    "pinia-plugin-persistedstate": "^4.1.1",
    "tree-kill": "^1.2.2",
    "vue": "^3.5.12",
    "vue-i18n": "^10.0.4",
    "vue-router": "^4.4.5",
    "vue3-virtual-scroller": "^0.2.3"
  }
}
